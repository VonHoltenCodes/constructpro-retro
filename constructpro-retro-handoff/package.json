    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "eslint": "^8.57.1",
    "eslint-config-expo": "^7.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "typescript": "~5.8.3"
  },
  "keywords": [
    "construction",
    "project-management",
    "react-native",
